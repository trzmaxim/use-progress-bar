// @flow
export type ProgressBar = {|
  +status: 'idle' | 'progress' | 'completed',
  +progress: number,
|}

export type Options = {|
  +frequency?: number,
  +max?: number,
  +duration?: number,
|}

export type State = {|
  +status: 'idle' | 'progress' | 'completed',
  +x: number,
  +progress: number,
|}

export type Action =
  | { type: 'increment', increment: number, max: number }
  | { type: 'complete' }
  | { type: 'reset' }
